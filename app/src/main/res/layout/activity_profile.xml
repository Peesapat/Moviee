<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">


    <ImageButton
        android:id="@+id/settingbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/ic_baseline_settings_24" />

    <ImageView
        android:id="@+id/userprofile"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_baseline_account_circle_24" />

    <TextView
        android:id="@+id/fullnametxt"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="35dp"
        android:paddingLeft="15dp"
        android:paddingTop="8dp"
        android:text="Dante Clericuzio"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="75dp"
        android:paddingLeft="15dp"
        android:text="Danteclericuzio1999@gmail.com"
        android:textColor="#000000"
        android:textSize="14sp" />


    <TextView
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/roboto"
        android:text="Recently view"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginLeft="15dp"/>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:background="@color/purple_500"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemBackground="@color/purple_500"
        app:itemIconTint="@drawable/serlector"
        app:itemTextColor="@drawable/serlector"
        app:menu="@menu/menu"
        android:layout_alignParentBottom="true"/>

    <Button
        android:id="@+id/signOutButton"
        android:layout_width="169dp"
        android:layout_height="59dp"
        android:layout_above="@+id/bottom_navigation"
        android:layout_below="@id/settingbtn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="160dp"
        android:layout_marginTop="284dp"
        android:layout_marginEnd="82dp"
        android:layout_marginBottom="283dp"
        android:text="Sign Out" />
</RelativeLayout>